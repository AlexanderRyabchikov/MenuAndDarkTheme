<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_side"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_item"
    android:background="@color/transparent"
    android:layout_margin="@dimen/margin8dp"
    app:cardCornerRadius="@dimen/radius_money_item"
    app:cardPreventCornerOverlap="false"
    app:cardMaxElevation="0dp">

    <FrameLayout
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/background_image"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/category_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/overlay_menu_item_image"
            android:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_restaurant"
        tools:text = "KFC So good"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/name_restaurant_text_size"
        android:paddingTop="@dimen/restaurant_padding"
        android:paddingBottom="@dimen/restaurant_padding"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </FrameLayout>

</androidx.cardview.widget.CardView>